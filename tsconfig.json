{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "webworker"],
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    // "sourceMap": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsxImportSource": "vue",
    // "suppressImplicitAnyIndexErrors":true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    // "types": ["element-plus/global", "unplugin-icons/types/vue"],
    "types": ["node", "vite/client", "element-plus/global"],
    "noEmit": false,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationDir": "./types",
    "paths": {
      "@toolman/components": ["./packages/components/index.ts"],
      "@toolman/components/*": ["./packages/components/*"],
      "@toolman/element": ["./packages/element/index.ts"],
      "@toolman/element/*": ["./packages/element/*"],
      "@toolman/shared": ["./packages/shared/index.ts"],
      "@toolman/shared/*": ["./packages/shared/*"],
      "@toolman/libs": ["./packages/libs"],
      "@toolman/libs/*": ["./packages/libs/*"]
    }
  },
  "include": ["*.ts", "packages", "scripts"],
  "exclude": ["unocss.config.ts", "node_modules", "**/*.md", "**/dist"]
}
